@using System.Data;
@model DataSet
@{
    ViewData["Title"] = "Intervencije";
}

@if (TempData["SuccessMessage"] != null)

{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)

{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>IDIntervencije</th>
                <th>Opis</th>
                <th>Adresa</th>
                <th>ZgradaID</th>
                <th>IDKorisnika</th>
                <th>Korisnik</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Tables[0].Rows)

            {
                <tr>
                    <td>@row["IDIntervencije"]</td>
                    <td>@row["Opis"]</td>
                    <td>@(row.Table.Columns.Contains("Adresa") ? row["Adresa"] : "-")</td>
                    <td>@row["ZgradaID"]</td>
                    <td>@(row["IDKorisnika"] ?? "-")</td>
                    <td>@(row["Korisnik"] ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <p>Nema intervencija.</p>
}
