@using System.Data;
@model System.Data.DataSet

@{
    ViewData["Title"] = "Korisnici";
}

<form method="get" action="@Url.Action("AdminPregledKorisnika", "Admin")" class="mb-3">
    <label for="prezimeFilter" class="form-label">Pretraži po prezimenu:</label>
    <input type="text" id="prezimeFilter" name="prezime" class="form-control form-control-sm" />
    <button type="submit" class="btn btn-sm btn-success mt-2">Pretraži</button>
</form>

<h1>Spisak korisnika</h1>

@if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)

{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>IDKorisnika</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Korisničko ime</th>
                <th>TipKorisnika</th>
                <th>Izmeni</th>
                <th>Obriši</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Tables[0].Rows)

            {
                <tr>
                    <td>@row["IDKorisnika"]</td>
                    <td>@row["Ime"]</td>
                    <td>@row["Prezime"]</td>
                    <td>@row["KorisnickoIme"]</td>
                    <td>@row["TipKorisnika"]</td>
                    <td>
                        <!-- Edit vodi na detaljnu formu -->
                        <form method="get" action="@Url.Action("AdminPregledKorisnikaDetaljno", "Admin")">
                            <input type="hidden" name="id" value="@row["IDKorisnika"]" />
                            <button type="submit" class="btn btn-sm btn-info">Izmeni</button>
                        </form>
                    </td>
                    <td>
                        <!-- Delete šalje POST sa ID-jem -->
                        <form method="post" action="@Url.Action("IzmeniKorisnika", "Admin")">
                            <input type="hidden" name="IDKorisnika" value="@row["IDKorisnika"]" />
                            <input type="hidden" name="action" value="obrisi" />
                            <button type="submit" class="btn btn-sm btn-danger">Obriši</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <p>Nema korisnika.</p>
}
